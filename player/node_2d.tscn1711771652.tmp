resource_name = "player"
script/source = "extends CharacterBody2D

const SPEED = 70
const GRAVITY = 800

@onready var sprite_2d: Sprite2D = $Sprite2D
@onready var sprite = $idle
@onready var anim = $AnimationPlayer
@onready var cam := $Camera2D  # بچه پلیر

# Shake variables
@export var shake_strength := 5
@export var shake_speed := 0.3
var shake_time := 0.0
var base_offset := Vector2.ZERO

func _ready():
	base_offset = cam.offset

func _physics_process(delta):
	# جاذبه
	if not is_on_floor():
		velocity.y += GRAVITY * delta
	else:
		velocity.y = 0

	# حرکت افقی
	var dir = 0
	if Input.is_key_pressed(KEY_A):
		dir -= 1
	if Input.is_key_pressed(KEY_D):
		dir += 1

	velocity.x = dir * SPEED

	# انیمیشن
	if dir != 0:
		anim.play(\"walk\")
		sprite.flip_h = dir < 0
	else:
		anim.play(\"idle\")

	move_and_slide()

	# Camera shake فقط تو سین elevator
if get_tree().current_scene.name == \"elevator\":
	shake_time += delta * shake_speed
	var target_offset = Vector2(
		randf_range(-shake_strength, shake_strength),
		randf_range(-shake_strength * 0.6, shake_strength * 0.6)
	)
	cam.offset = cam.offset.linear_interpolate(base_offset + target_offset, 0.1)
else:
	cam.offset = cam.offset.linear_interpolate(base_offset, 0.1)
	shake_time = 0.0
"

